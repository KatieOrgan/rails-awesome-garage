<div class="banner">
<h1>Find a car for all your travel needs!</h1>
</div>

<div class="card-container">
  <div class="cards">
  <% @cars.each do |car| %>

  <%= link_to car_path(car) do %>
    <div class="card-car"
      style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
      url('https://images.unsplash.com/photo-1622665556164-1a41221d82ce?q=80&w=1315&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')">


      <div class="card-car-infos">
      <div>
        <h2><%= car.brand %></h2>
        <h2><%= car.model %></h2>
        <p>Short description here!</p>
      </div>
        <h3><%= car.fuel %></h3>
      </div>
    </div>
    <% end %>
    <% end %>
    </div>
</div>
